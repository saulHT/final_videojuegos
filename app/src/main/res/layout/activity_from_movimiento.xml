<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FromMovimientoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_movTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="tipo" />

        <EditText
            android:id="@+id/editText_movMonto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="monto" />

        <EditText
            android:id="@+id/editText_MovMotiv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="motivo" />

        <Button
            android:id="@+id/but_tomaFotoVauc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="foto voucher" />

        <ImageView
            android:id="@+id/imageView_tomoFotoMovim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/but_guardMoviminet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="guardar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>